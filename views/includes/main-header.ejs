<header class="main-header">
    <div class="top-header">
      <div class="container">
        <div class="top-header-inner">
          <div class="top-left">
                 <!-- TODO: Show recent papers -->
            <div class="ticker-wrap">
              <div class="ticker-title">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  height="24"
                  viewBox="0 -960 960 960"
                  width="24"
                >
                  <path
                    d="M420.001-143.082v-276.919H307.694v-439.998H653.46l-73.461 255.768h158.076L420.001-143.082Z"
                  /></svg>
                  <span>Recent:</span>
              </div>
              <div class="ticker-slide-wrap">
                <div class="swiper ticker-slider">
                  <div class="swiper-wrapper">
                    <!-- TODO: Implement recent 3 papers functionality -->
                    <% for(let paper of recentPapers()){ %>
                      <div class="swiper-slide">
                        <a href="/paper/<%= paper.id %>"><%= paper.title %></a>
                      </div>
                      <% } %>
                    <div class="swiper-slide">
                      <a href="single.html"
                        >Facebook at 20: Four ways it changed the world...</a
                      >
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="top-right">
            <ul class="header-social">
              <li>
                <a href="https://x.com/e28886" target="_blank">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                    <path
                      d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z"
                    />
                  </svg>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- /.top-header -->
    <div class="bottom-header">
      <div class="container">
        <div class="main-header-wapper">
          <div class="site-logo">
            <a href="/"><span class="site-title">e28886</span></a>
          </div>
          <div class="main-header-info">
            <div class="header-menu-wrap">
              <ul class="nav-menu">
                 <!-- Show publish if user logged in -->
               <% if(user) { %>
                <li>
                  <a href="/create-paper" data-text="Publish">Publish</a>
                </li>
                <% } %>
              </ul>
            </div>
            <!--/.header-menu-wrap-->
            <div class="menu-right-item">
          <!-- TODO: Add search functionality -->
              <button class="menu-search">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 14.811 14.811"
                >
                  <g
                    fill="none"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    transform="translate(-2.25 -2.25)"
                  >
                    <circle
                      cx="5.5"
                      cy="5.5"
                      r="5.5"
                      data-name="Ellipse 7"
                      transform="translate(3 3)"
                    ></circle>
                    <path d="m16 16-3.142-3.142"></path>
                  </g>
                </svg>
              </button>
              
              <% if(user) { %>
              <a href="/logout" class="default-btn text-anim" data-text="Logout">
                Logout
            </a>
              <% } else { %>
              <a href="/login" class="default-btn text-anim" data-text="Login"
                >Login</a
              >
              <%} %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /.bottom-header -->
  </header>